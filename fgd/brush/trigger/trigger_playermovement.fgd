
@SolidClass base(Trigger) 
= trigger_playermovement: "An entity that can be used to disable player's automatic ducking/unducking when jumping."
	[
	spawnflags(flags)  =
		[
		16: "(OBSOLETE, Uncheck me)" : 0
		128: "Disable auto player movement" : 1
		2048: "Auto-duck while in trigger" : 0
		4096: "Auto-walk while in trigger" : 0 [since_L4D]
		8192 : "Disable jump while in trigger" [since_L4D2]
		]

	]
