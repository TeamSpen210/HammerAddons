		[
		"Tracer": "Default"
		"AR2TRACER": "AR2"
		"" : "None"
		]

	weaponname[engine](string) : "Weapon" : "weapon_ak47"
	weaponname[CSGO](choices) : "Weapon" : "weapon_ak47" : "The weapon that this entity emulates when it shoots." =
